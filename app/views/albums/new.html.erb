<h1>Add an Album!</h1>

<form action="<%= albums_url %>" method="post">
  <ul>
    <li>
      <select name="album[band_id]">
        <% Band.all.each do |band| %>
          <option value="<%= band.id %>"
            <%= "selected" if  @album.band_id == band.id%>>
            <%= band.name %>
          </option>
        <% end %>
      </select>
    <li>
      <label>Title:
        <input type="text" name="album[title]">
      </label>
    </li>

    <li>
      <label for="year">Year: </label>
      <input type="number" name="album[year]" id="year">
    </li>

    <li>
      <label for="live">Live: </label>
      <label for="true">True </label>
      <input type="radio" name="live[true]" id="true" value="true">
      <label for="true">False </label>
      <input type="radio" name="live[false]" id="false" value="false">



      <!-- <input type="radio" id="true"
       name="live[true]" value="true">
      <label for="true">true</label>

      <input type="radio" id="false"
       name="live[false]" value="false">
      <label for="false">false</label> -->
    </li>
  </ul>




  <input type="submit" value="Add!">
</form>
